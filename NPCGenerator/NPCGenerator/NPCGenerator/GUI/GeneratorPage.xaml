<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NPCGenerator.GUI.GeneratorPage">
    <ContentPage.Resources>
        <DataTemplate x:Key="GenreTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <ListView BackgroundColor="Red" ItemsSource="{Binding TestList, Mode=TwoWay}"/>

            </Grid>
        </DataTemplate>
    </ContentPage.Resources>
    <ContentPage.Content>
        
        <StackLayout>
            <ContentView BindingContext="{x:Binding AppModel.CurrentGenre, Mode=OneWay}" ControlTemplate="{StaticResource GenreTemplate}"/>
            <!--<ListView BackgroundColor="Red" ItemsSource="{Binding TestList, Mode=TwoWay}"/>-->
            <!--<Label Text="{x:Binding AppModel.Genres}"/>-->
            
            <Button Text="Genre ändern" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>